{
	"name": "@mokemokechicken/yfinance-mcp-server",
	"version": "1.2.0",
	"description": "unofficial Yahoo Finance API MCP Server - A Model Context Protocol server implementation for Yahoo Finance API",
	"main": "build/index.js",
	"bin": {
		"yfinance-mcp-server": "build/index.js"
	},
	"scripts": {
		"dev": "tsx --watch ./src/index.ts",
		"build": "esbuild src/index.ts --minify --bundle --platform=node --format=esm --outfile=build/index.js",
		"test": "npx tsx --test --test-reporter dot tests",
		"test:verbose": "find tests -name '*.test.ts' -exec npx tsx --test --test-reporter spec {} +",
		"test:silent": "find tests -name '*.test.ts' -exec npx tsx --test --test-reporter dot {} + 2>&1 | grep -v 'calculation failed' || echo 'Tests completed'",
		"test:individual": "npx tsx --test",
		"lint": "biome lint src/",
		"lint:fix": "biome lint src/ --write",
		"format": "biome format src/ --write",
		"check": "biome check src/",
		"check:fix": "biome check src/ --write",
		"typecheck": "tsc --noEmit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mokemokechicken/yfinance-mcp-server.git"
	},
	"keywords": [
		"yahoo-finance",
		"mcp",
		"model-context-protocol",
		"finance",
		"stock"
	],
	"author": "mokemokechicken",
	"license": "ISC",
	"type": "module",
	"files": [
		"build"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.8.0",
		"yahoo-finance2": "^3.11.2",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.14.0",
		"esbuild": "^0.25.2",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3"
	}
}
