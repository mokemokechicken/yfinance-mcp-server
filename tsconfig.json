{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./build",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules"]
}
